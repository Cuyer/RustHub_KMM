ALTER TABLE itemEntity RENAME TO itemEntity_old;

CREATE TABLE itemEntity (
    id INTEGER NOT NULL,
    name TEXT,
    short_name TEXT,
    image TEXT,
    categories TEXT,
    language TEXT AS LanguageEntity,
    description TEXT,
    PRIMARY KEY(id)
);

INSERT INTO itemEntity (id, name, short_name, image, categories, language, description)
SELECT id, name, short_name, image, categories, language, description
FROM itemEntity_old;

DROP TABLE itemEntity_old;
