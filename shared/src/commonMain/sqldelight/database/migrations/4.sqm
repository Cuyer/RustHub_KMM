import pl.cuyer.rusthub.data.local.model.LanguageEntity;

CREATE TABLE monumentEntity (
    slug TEXT NOT NULL,
    name TEXT,
    attributes TEXT,
    spawns TEXT,
    usable_entities TEXT,
    mining TEXT,
    puzzles TEXT,
    language TEXT AS LanguageEntity,
    PRIMARY KEY(slug, language)
);

CREATE TABLE monumentSyncEntity (
    id TEXT NOT NULL PRIMARY KEY,
    sync_state TEXT NOT NULL
);

