<resources>

    <!-- Allows us to override night specific attributes in the
         values-night folder. -->
    <style name="NightAdjusted.Theme.RustHub" parent="Theme.AppCompat.Light.NoActionBar" />

    <!-- The final theme we use -->
    <style name="Theme.RustHub" parent="NightAdjusted.Theme.RustHub">
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.RustHub.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/rusthub_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.RustHub</item>
    </style>

    <!-- Theme used for the open source licenses screen -->
    <style name="Theme.RustHub.Oss" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/oss_primary</item>
        <item name="android:textColorPrimary">@color/oss_on_background</item>
        <item name="android:colorSecondary">@color/oss_secondary</item>
        <item name="android:textColorSecondary">@color/oss_on_secondary</item>
        <item name="android:windowBackground">@color/oss_background</item>
        <item name="android:fontFamily">@font/kanit_medium</item>
    </style>

</resources>